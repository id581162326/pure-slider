{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*",
    "@types/*"
  ],
  "exclude": ["node_modules"]
}