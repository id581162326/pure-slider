{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "test/*": ["test/*"],
      "helpers/*": ["helpers/*"],
      "plugin/*": ["plugin/*"],
      "view-components/*": ["plugin/view/components/*"],
      "view-managers/*": ["plugin/view/managers/*"]
    }
  },
  "include": ["@types/*", "src/**/*"],
  "exclude": ["node_modules"]
}

